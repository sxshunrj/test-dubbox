<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:protocol name="rest" server="tomcat" port="8080" />

	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service interface="com.sxshunrj.test.dubbo.service.UserService" ref="userService"/>
	<!-- 和本地bean一样实现服务 -->
	<bean id="userService" class="com.sxshunrj.test.dubbo.service.impl.UserServiceImpl" />
</beans>